vrrp_instance VI_1 {
    interface eno2
    state backup
    smtp_alert
    nopreempt
    virtual_router_id 51
    priority 100 # on the nodes considered slaves, change 101 -> 100
    unicast_peer {
      10.168.0.3
      10.168.0.4
      10.168.0.5
    }
 
    advert_int 1
       authentication {
          auth_type PASS
          auth_pass 1111
    }
 
    virtual_ipaddress {
       10.168.0.10/16
    }
 
}

